            <kind>1</kind>
            <string>x = x - x_speed;

if(place_meeting(x,y,obj_ship)){
    switch(sub_img){
        case 0:
            global.puntaje += 100;
            break;
        case 1: 
            global.puntaje += 50;
            break;
        case 2: 
            obj_ship.shield = true;
            obj_ship.alarm[1] = room_speed*5;
            break;
        case 3:
            obj_ship.powerup = true;
            obj_ship.spd = 12;
            obj_ship.alarm[2] = room_speed*5;
            break;
        case 4:
            obj_ship.bonus_multiplier = true;
            break;
        case 5:
            obj_ship.enemy_slowed = true;
            obj_ship.alarm[3] = room_speed*5;
            break;
        default: 
            break;
    }
    
    instance_destroy(self);
}

if(x &lt; -100)
    instance_destroy(self);
</string>
