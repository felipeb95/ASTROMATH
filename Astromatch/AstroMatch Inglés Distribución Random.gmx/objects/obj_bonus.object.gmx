x_speed = choose(3,5,7);
multiplier = false;
multiplier_text = undefined;

/*  
    sub_img = 0 -&gt; +100 puntos con probabilidad pb0
    sub_img = 1 -&gt; +50 puntos con probabilidad pb1
    sub_img = 2 -&gt; escudo activado con probabilidad pb2
    sub_img = 3 -&gt; velocidad turbo con probabilidad pb3
    sub_img = 4 -&gt; multiplicador de puntos aleatorios (para pr√≥ximo ejercicio correcto) con probabilidad pb4
    sub_img = 5 -&gt; ralentizador de 1/2 a velocidad asteroides con probabilidad pb5
    
*/

pb0 = global._100points_prob;
pb1 = global._50points_prob;
pb2 = global.shield_prob;
pb3 = global.turbo_prob;
pb4 = global.multiplier_prob;
pb5 = global.slowed_prob;

bonus_picker = random_range(0,1);
str = "Probabilidad del bonus = "+string(bonus_picker*100);
show_debug_message(str);

if(bonus_picker &gt;= 0 &amp;&amp; bonus_picker &lt;= pb0)
    sub_img = 0;
if(bonus_picker &gt; pb0 &amp;&amp; bonus_picker  &lt;= (pb0 + pb1))
    sub_img = 1;
if(bonus_picker &gt; (pb0+pb1) &amp;&amp; bonus_picker &lt;= (pb0+pb1+pb2))
    sub_img = 2;
if(bonus_picker &gt; (pb0+pb1+pb2) &amp;&amp; bonus_picker &lt;= (pb0+pb1+pb2+pb3))
    sub_img = 3;
if(bonus_picker &gt; (pb0+pb1+pb2+pb3) &amp;&amp; bonus_picker &lt;= (pb0+pb1+pb2+pb3+pb4)){
    sub_img = 4;
    multiplier = true;
    multiplier_value = irandom_range(2,5);
    obj_bonus_info.m_value = multiplier_value;
    multiplier_text = "PUNTOS #X"+string(multiplier_value);
    
}
if(bonus_picker &gt; (pb0+pb1+pb2+pb3+pb4) &amp;&amp; bonus_picker &lt;= (pb0+pb1+pb2+pb3+pb4+pb5))
    sub_img = 5;


</string>
          </argument>
